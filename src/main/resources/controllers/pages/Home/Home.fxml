<?xml version="1.0" encoding="UTF-8"?>

<?import components.RelativeHBox?>
<?import components.SquareRegion?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import components.SquareStackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Slider?>
<VBox
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        minHeight="-Infinity" minWidth="-Infinity"
        fx:controller="controllers.pages.Home">
    <stylesheets>
        <URL value="@../../../utils/reset.css" />
        <URL value="@../../../utils/classes.css" />
        <URL value="@../../../themes/Theme1.css" />
        <URL value="@Home.css" />
    </stylesheets>
    <children>
        <SplitPane
                VBox.vgrow="ALWAYS"
                prefHeight="200"
                dividerPositions="0.3"
                orientation="VERTICAL">
            <fx:define>
                <ToggleGroup fx:id="grupoDeSecciones" />
            </fx:define>
            <items>
                <StackPane styleClass="wrapper-superior">
                    <RelativeHBox fx:id="player" min="0" max="20">
                        <children>
                            <SquareStackPane fx:id="cover">
                                <clip>
                                    <Rectangle fx:id="coverRectangleClip"
                                               width="200"
                                               height="200"
                                               arcWidth="26" arcHeight="26"/>
                                </clip>
                            </SquareStackPane>
                            <VBox
                                    styleClass="details"
                                    HBox.hgrow="ALWAYS">
                                <VBox VBox.vgrow="ALWAYS" alignment="CENTER_LEFT">
                                    <Label fx:id="songName" text="Song Name to long lorem ipsum x" wrapText="true"/>
                                    <Label fx:id="artistName" text="Artist" />
                                </VBox>
                                <HBox styleClass="timeAndButtons">
                                    <HBox styleClass="time">
                                        <Label fx:id="currentTime" text="0:10" />
                                        <Label text=" - " />
                                        <Label fx:id="totalTime" text="1:00" />
                                    </HBox>
                                    <HBox styleClass="buttons">
                                        <Button mnemonicParsing="false" fx:id="btnPrevious" prefWidth="20" prefHeight="20">
                                            <graphic>
                                                <ImageView fx:id="imageBtnPrevious">
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button mnemonicParsing="false" fx:id="pause" prefWidth="20" prefHeight="20" onAction="#onPauseAction">
                                            <graphic>
                                                <ImageView fx:id="imagePause">
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button mnemonicParsing="false" fx:id="btnNext" prefWidth="20" prefHeight="20">
                                            <graphic>
                                                <ImageView fx:id="imageBtnNext">
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </HBox>
                                </HBox>
                                <Slider fx:id="timeStatus"/>
                            </VBox>
                        </children>
                    </RelativeHBox>
                </StackPane>
                <SplitPane dividerPositions="0.3" styleClass="main">
                    <items>
                        <StackPane styleClass="wrapper-izquierdo">
                            <ScrollPane fx:id="secciones" fitToWidth="true" styleClass="level-2">
                                <VBox fx:id="folders" styleClass="p2">
                                    <Label text="Carpetas" styleClass="p1"/>
                                    <VBox styleClass="level-2,p2">
                                        <ToggleButton
                                                fx:id="abrirCarpeta"
                                                text="Abrir Carpeta"
                                                onAction="#onActionAbrirCarpeta">
                                            <toggleGroup>
                                                <ToggleGroup/>
                                            </toggleGroup></ToggleButton>
                                    </VBox>
                                    <Label text="Listas" />
                                    <VBox styleClass="level-2">
                                        <ToggleButton text="Inicio" toggleGroup="$grupoDeSecciones" />
                                        <ToggleButton text="Favoritos" toggleGroup="$grupoDeSecciones" />
                                        <ToggleButton text="Mis Listas" toggleGroup="$grupoDeSecciones" />
                                        <ToggleButton text="Artistas" toggleGroup="$grupoDeSecciones" />
                                        <ToggleButton text="Albums" toggleGroup="$grupoDeSecciones" />
                                    </VBox>
                                </VBox>
                            </ScrollPane>
                        </StackPane>
                        <StackPane styleClass="wrapper-derecho">
                            <VBox fx:id="pestanas">
                                <HBox spacing="10">
                                    <Label>Any : </Label>
                                    <Label>Song : </Label>
                                    <Label>Artist : </Label>
                                    <Label>Date : </Label>
                                </HBox>
                                <ScrollPane VBox.vgrow="ALWAYS">
                                    <VBox alignment="TOP_CENTER"
                                          styleClass="fit-child"
                                          fx:id="playList">
                                        <Button text="boton 1"/>
                                        <Button text="boton 2"/>
                                        <Button text="boton 3"/>
                                    </VBox>
                                </ScrollPane>
                            </VBox>
                        </StackPane>
                    </items>
                </SplitPane>
            </items>
        </SplitPane>
    </children>
</VBox>